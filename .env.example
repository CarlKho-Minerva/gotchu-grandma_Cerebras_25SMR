# Gotchu Grandma - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ==========================================
# LIVEKIT CONFIGURATION
# ==========================================
# Get these from https://cloud.livekit.io/
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# ==========================================
# CEREBRAS AI CONFIGURATION
# ==========================================
# Get your API key from https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# ==========================================
# SPEECH-TO-TEXT CONFIGURATION
# ==========================================
# Get your API key from https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ==========================================
# TEXT-TO-SPEECH CONFIGURATION
# ==========================================
# Get your API key from https://cartesia.ai/
CARTESIA_API_KEY=your_cartesia_api_key_here

# ==========================================
# FALLBACK LLM CONFIGURATION (OPTIONAL)
# ==========================================
# OpenAI API key for fallback scenarios
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# AGENT CONFIGURATION
# ==========================================
# Room name for LiveKit sessions
LIVEKIT_ROOM_NAME=grandma_defense_room

# Agent verbosity level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==========================================
# SCAM DETECTION SETTINGS
# ==========================================
# Minimum confidence score to trigger scam response (0-100)
SCAM_CONFIDENCE_THRESHOLD=70

# Maximum call duration in minutes
MAX_CALL_DURATION=30

# ==========================================
# PERSONA SETTINGS
# ==========================================
# Grandma's response delay range in seconds (min,max)
RESPONSE_DELAY_MIN=2
RESPONSE_DELAY_MAX=8

# Rambling probability (0.0-1.0)
RAMBLING_PROBABILITY=0.7

# Confusion probability (0.0-1.0)
CONFUSION_PROBABILITY=0.5

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Enable debug mode for detailed logging
DEBUG_MODE=false

# Enable performance metrics collection
ENABLE_METRICS=true

# Save conversation logs for analysis
SAVE_CONVERSATION_LOGS=true
